---
interface Props {
    date?: Date;
}

const { date } = Astro.props;

const isValidDate = date instanceof Date && !isNaN(date.getTime());
---

{
    isValidDate ? (
        <time datetime={date.toISOString()}>
            {date.toLocaleDateString("en-GB", {
                year: "numeric",
                month: "short",
                day: "numeric",
            })}
        </time>
    ) : (
        <time>Unknown date</time>
    )
}
